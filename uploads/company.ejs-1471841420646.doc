<!DOCTYPE HTML>
<html>
  <head>
    <charset="UTF-8">
    <title>Job Finder</title>
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
    <script type="text/javascript" src="/javascripts/index.js"></script>
  </head>
  <body>
    <div class="header">
      <div class="clearfix">
        <div class="logo">
          <a href="/">
          <img src="/images/logo.png" alt="LOGO" height="100" width="250">
          </a>
        </div>
        <ul class="navigation">
          <li>
            <a href="/viewProfile">Profile</a>
          </li>
          <li class="active">
            <a href="/login"><%= link %></a>
          </li>
        </ul>
      </div>
    </div>
    <div class="contents">
      <div class="clearfix">
        <h1>Register Here</h1>
        <div class="frame2">
          <div class="box">
            <img src="/images/bg2.jpg" alt="Img" height="298" width="924">
          </div>
        </div>
        <form class="register-container" action="/company/<%= id %>" method="post">
          <input name="email" id="email" type="hidden" value="<%= email %>" />
          <input name="id" id="id" type="hidden" value="<%= id %>" />
          <div class="responseMsg"><label><%= congratsMsg %></label><label><%= failureMsg %></label>
          </div>
          <div class="div-positioning txtfield-frm-top color" name="companyDetails">
            <div class="color">
              <h2><%= post %></h2>
            </div>
            <h3>
              Company
              <h1><%= company %></h1>
            </h3>
            <h3>
              Responsibilities
            </h3>
            <%= responsibilities %>
            <h3>
              Bond
            </h3>
            <%= bond %>
            <h3>
              Salary
            </h3>
            <%= salary %>
          </div>
          <div class="register">
            <input id="visible" class="button register-position" name="register" type="submit"value="Register"/>
          </div>
          <div class="unregister">
          <input id="visible" class="button unregister-position" name="unregister" type="submit"value="Unregister"/>
          </div>
      </div>
      </form>
    </div>
    </div>
    <div class="footer">
      <div class="clearfix">
        <div class="section contact">
          <h4>Contact Us</h4>
          <p>
            <span>Address:</span> Qburst Technologies pvt.ltd
          </p>
          <p>
            <span>Phone:</span> (+91) 9744296904
          </p>
          <p>
            <span>Email:</span> krishnadev@qburst.com
          </p>
        </div>
      </div>
    </div>
  </body>
</html>